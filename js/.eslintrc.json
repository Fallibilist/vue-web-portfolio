{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "@vue/standard"
    ],
    "parserOptions": {
        "parser": "babel-eslint"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    },
    "root": true
}